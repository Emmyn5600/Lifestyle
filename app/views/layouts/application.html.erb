<!DOCTYPE html>
<html>
  <head>
    <title>Lifestyle</title> 
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="start">
  <header>
      <!-- desktop nav -->
      <nav class="navbar navbar-expand-sm border-bottom fixed-top first-nav">
          <ul class="navbar-nav flex-row align-items-center navbar-desktop">
            <li class="nav-item ml-3">
              <h3 class="fw-bold">
                <a class="lifestyle acumin-gray-color" href="/">liFEsTlye</a>
              </h3>
            </li>
          </ul>

          
      <ul class="navbar-nav ml-auto align-items-center">
          <% if current_user %>
          <li class="nav-item2">
            <a href="/" class="home p-2 user-btn nav-link">
              Home
            </a>
          </li>
          <li class="nav-item2">
            <%= link_to "Create Article", new_article_path, class: "text-white p-2 user-btn button-sign rounded nav-link" %>
          </li>
          <li class="nav-item2">
            <%= link_to "Create Category", new_category_path, class: "user-btn category nav-link" %>
          </li>
          <li class="nav-item2 dropdown">
            <a class="nav-link " href="/logout" id="navbardrop" data-toggle="dropdown">
              <i class="user-logout far fa-user-circle"></i>
            </a>
            <div class="dropdown-menu">
              <%= link_to "Logout", "/logout", class: "nav-link text-dark"%>
            </div>
          </li>
          <% else %>
          <li class="nav-item1">
            <%= link_to "Sign In", "/login", class: "user-btn nav-link text-dark" %>
          </li>

          <li class="nav-item1">
            <%= link_to "Sign Up", new_user_path, class: "user-btn nav-link text-dark" %>
          </li>
          <% end %>
        </ul>
      </nav>
      <!-- mobile nav -->
      <nav class="navbar navbar-expand-sm bg-white border-bottom fixed-top d-md-none">
        <ul class="navbar-nav flex-row align-items-center w-100 d-flex justify-content-between">
          <li class="nav-item">
            <i class="fas fa-bars hamburger acumin-gray-color"></i>
          </li>
          <li class="nav-item ml-3">
            <h3 class="acumin-gray-color font-weight-bold">
              <a class="acumin-gray-color" href="/">liFEsTlye</a>
            </h3>
          </li>
          <li class="nav-item">
            <a href="#">
              <i class="fas fa-search hamburger acumin-gray-color"></i>
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <main id="page-container">
      <% if flash[:notice] %>
      <div class="row status">
        <div class="col-12">
          <div class="alert alert-success mr-auto ml-auto w-50 mt-3">
            <strong><%= notice %></strong>
          </div>
        </div>
      </div>
      <% end %>
      <div class="container-fluid content">
        <div class="row">
          <nav class="col-6 navbar bg-acumin-gray-color side-menu d-none">
            <ul class="navbar-nav text-white">
              <% if current_user %>
              <li class="nav-item">
                <%= link_to "Create Article", new_article_path, class: "nav-link text-uppercase" %>
              </li>

              <hr class="text-white border border-white w-100">

              <li class="nav-item">
                <a class="nav-link text-uppercase">
                  <i class="far fa-user-circle"></i>
                </a>
              </li>

              <li class="nav-item">
                <%= link_to "Logout", "/logout", class: "nav-link"%>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_path, class: "nav-link text-uppercase" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign In", "/login", class: "nav-link text-uppercase" %>
              </li>
              <% end %>
            </ul>
          </nav>
          <div id="overlay"></div>
        </div>

        <%= yield %>
      </div>

      <footer class="footer-section container-fluid">
          <ul class="row">
            <li class="nav-item col-12 col-md-4">
              <h3 class="text-white font-weight-bold">
                <a class="text-white" href="/">liFEsTlye</a>
              </h3>
            </li>
            <li class="nav-item col-12 col-md-4">
              <a href="/">
                Privacy Policy
              </a>
              <a href="/">
                Terms & conditions
              </a>
               <a href="/">
              Â© Copyright 2021. 
              </a>
            </li>
            <li class="nav-item col-12 col-md-4">
              <div class="row d-flex justify-content-end">
              
                <div class="col-1">
                  <i class="fab fa-facebook acumin-color"></i>
                </div>
                <div class="col-1">
                  <i class="fab fa-twitter-square acumin-color"></i>
                </div>
                <div class="col-1">
                  <i class="fab fa-instagram-square acumin-color"></i>
                </div>
              </div>
            </li>
          </ul>
      </footer>
    </main>

    <%=javascript_include_tag "https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"  %>

    <script>
      $( document ).ready(function() {
        $('.hamburger').click(function() {
          console.log('emmy');
          if ($(window).width() < 768) {
            $('.side-menu').toggleClass('d-none');
            $('#overlay').fadeToggle(300);
          }
        });
      });


      $(document).ready(function() {
          $('.js-example-basic-multiple').select2();
      });

    </script>
  </body>
</html>
